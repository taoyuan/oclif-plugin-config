{
  "name": "oclif-plugin-config",
  "version": "1.0.1",
  "description": "A command line utility plugin for managing configuration files with oclif.",
  "keywords": [
    "oclif",
    "plugin",
    "config",
    "configuration",
    "yaml",
    "json"
  ],
  "author": "TY <towyuan@outlook.com>",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": "taoyuan/oclif-plugin-config",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "prerelease": "yarn && cross-env CI=1 yarn run test",
    "release": "yarn prerelease && np --no-2fa --yolo --no-yarn",
    "build": "yarn clean && nb-tsc -b",
    "build:full": "yarn install && yarn run clean && yarn run build",
    "lint": "yarn run prettier:check && yarn run eslint",
    "lint:fix": "yarn run eslint:fix && yarn run prettier:fix",
    "eslint": "nb-eslint --report-unused-disable-directives --cache .",
    "eslint:fix": "yarn run eslint --fix",
    "prettier:cli": "nb-prettier \"**/*.ts\" \"**/*.md\"",
    "prettier:check": "yarn run prettier:cli --check",
    "prettier:fix": "yarn run prettier:cli --write",
    "clean": "del 'dist' 'coverage' '.nyc_output' '*.tsbuildinfo'",
    "pretest": "yarn run clean && yarn run build",
    "test": "yarn run jest",
    "posttest": "yarn lint",
    "test:ci": "jest --collectCoverage --coverageDirectory=\"./coverage\" --reporters=default --reporters=jest-junit --watchAll=false",
    "jest": "jest",
    "postpack": "shx rm -f oclif.manifest.json",
    "prepack": "yarn build && oclif manifest && oclif readme",
    "version": "oclif readme && git add README.md"
  },
  "dependencies": {
    "@oclif/core": "^2",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-plugins": "^3.1.6",
    "chalk": "^4.1.2",
    "conf": "^10.2.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@nutol/build": "^0.2.14",
    "@nutol/eslint-config": "^0.2.9",
    "@nutol/ts-config": "^0.2.1",
    "@oclif/test": "^2.3.30",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/chai": "^4",
    "@types/jest": "^29.5.3",
    "@types/js-yaml": "^4.0.5",
    "@types/micromatch": "^4.0.2",
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "chai": "^4",
    "cross-env": "^7.0.3",
    "del-cli": "^5.0.0",
    "eslint": "^8.45.0",
    "eslint-config-oclif": "^4",
    "eslint-config-oclif-typescript": "^1.0.3",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-eslint-plugin": "^5.1.0",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.6.1",
    "jest-junit": "^16.0.0",
    "np": "^8.0.4",
    "oclif": "^3",
    "prettier": "^2.8.8",
    "shx": "^0.3.4",
    "tmp": "^0.2.1",
    "ts-jest": "^29.1.1",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  },
  "oclif": {
    "bin": "config",
    "dirname": "config",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " "
  },
  "files": [
    "README.md",
    "oclif.manifest.json",
    "bin",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "packageManager": "yarn@3.6.1"
}
